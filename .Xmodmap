!----------!
! Keyboard !
!----------!
! Remove cap-lock and l-ctl bindings
remove Lock = Caps_Lock
remove Control = Control_L
! Make cap-lock l-ctl, make l-ctl escape
keycode 66 = Control_L
keycode 37 = 0xff1b
add Control = Control_L
! Remove r-alt binding, make it caps lock
!remove mod1 = Alt_R
!keycode 108 = Caps_Lock
!add Lock = Caps_Lock

!-----------------------!
! Kensington Track Ball !
!-----------------------!
!! Clockwise from one-o'-clock: rclick, mclick, lclick, button 8
! Right-handed:
!pointer = 1 8 2 4 5 6 7 3 9 10
! Left-handed:
!pointer = 2 3 1 4 5 6 7 8 9 10
